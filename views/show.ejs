</head>
<body>

    
    <div id="logo-container">
        <h1 id="logo">IndexGuru</h1>
        <p id="slogan">A simple node express Index-Card App</p>
    </div>

    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/add.html">Add your index card</a></li>
        <li><a href="/results" target="_blank">Index Card API Endpoint</a></li>
    </ul>
    
<!-- this is the front of the card -->

    <div id="header">
        <h3><span>Front</span></h3>
		
		<% for (var i=0; i<card.length; i++) { %>			
			<p><span><%= card[i].question %></span></p>			
		<% } %>
	</div>

    <div id="cardStyling">
        <span></span>
    </div>

    <div> 
        <a href="#" id="hyperLinks">flip me</a>
    </div>

    <!-- this is the back of the card -->

    <div id="header", class="card-back">
		<h3><span>Back</span></h3>

		<% for (var i=0; i<card.length; i++) { %>
			<p><span class="hide"><%= card[i].answer %></span></p>
		<% } %>

	</div>
    
        <div id="cardStyling">
            <span></span>
        </div>
    
        <div> 
            <a href="#" id="hyperLinks">NEXT</a>
        </div>

</body>
</html>